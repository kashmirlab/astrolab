{
  "name": "kashmir-website",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "scripts": {
    "build": "bunx --bun astro check && bunx --bun astro build",
    "check": "bunx --bun astro check",
    "deploy": "bunx wrangler deploy",
    "dev": "bunx --bun astro dev",
    "format": "oxfmt --write .",
    "knip": "knip",
    "knip:fix": "knip --fix",
    "knip:prod": "knip --production",
    "lhci": "lhci autorun",
    "lint": "oxlint .",
    "lint:fix": "oxlint --fix .",
    "prepare": "lefthook install",
    "preview": "bunx --bun astro preview"
  },
  "dependencies": {
    "@astrojs/cloudflare": "^12.6.12",
    "@astrojs/mdx": "^4.3.13",
    "@astrojs/sitemap": "^3.7.0",
    "@nanostores/persistent": "^1.3.3",
    "@tailwindcss/typography": "^0.5.19",
    "@tailwindcss/vite": "^4.1.18",
    "astro": "^6.0.0-beta.11",
    "astro-icon": "^1.1.5",
    "nanostores": "^1.1.0",
    "tailwindcss": "^4.1.18"
  },
  "devDependencies": {
    "@astrojs/check": "^0.9.6",
    "@commitlint/cli": "^20.4.1",
    "@commitlint/config-conventional": "^20.4.1",
    "@lhci/cli": "^0.15.1",
    "knip": "^5.83.1",
    "lefthook": "^2.1.1",
    "oxfmt": "^0.32.0",
    "oxlint": "^1.47.0",
    "sort-package-json": "^3.6.1",
    "typescript": "^5.9.3",
    "wrangler": "^4.65.0"
  }
}
