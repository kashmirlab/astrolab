---
import { ClientRouter } from 'astro:transitions';
import '@/styles/global.css';

interface Props {
  title?: string;
  description?: string;
  image?: string;
}

const {
  title = 'Astro Modern Template',
  description = 'A modern, production-ready Astro template with the latest technologies',
  image = '/favicon.svg',
} = Astro.props;

const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="en" class="scroll-smooth">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <link rel="canonical" href={canonicalURL} />

    <!-- SEO -->
    <title>{title}</title>
    <meta name="description" content={description} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.site)} />

    <!-- Twitter -->
    <meta name="twitter:card" content="summary_large_image" />
    <meta name="twitter:title" content={title} />
    <meta name="twitter:description" content={description} />
    <meta name="twitter:image" content={new URL(image, Astro.site)} />

    <!-- Generator -->
    <meta name="generator" content={Astro.generator} />

    <!-- View Transitions -->
    <ClientRouter />

    <!-- Prevent dark mode flash (inline, runs before paint) -->
    <script is:inline>
      const theme = localStorage.getItem('theme');
      if (
        theme === '"dark"' ||
        (!theme && window.matchMedia('(prefers-color-scheme: dark)').matches)
      ) {
        document.documentElement.classList.add('dark');
      }
    </script>
  </head>

  <body class="min-h-screen bg-white text-slate-900 dark:bg-slate-900 dark:text-slate-100">
    <slot />

    <!-- Initialize stores -->
    <script>
      import { initThemeStore } from '@lib/stores/theme';

      initThemeStore();

      document.addEventListener('astro:page-load', () => {
        initThemeStore();
      });
    </script>
  </body>
</html>
